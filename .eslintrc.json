{
  "env": {
    "browser": true,
    "es2021": true,
    "mongo": true
  },
  "extends": ["prettier", "mongodb-js/node"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": ["error", { "allow": ["warn", "log"] }],
    "func-names": "off",
    "no-process-exit": "off",
    "object-shorthand": "off",
    "class-methods-use-this": "off",
    "prettier/prettier": ["error", { "singleQuote": true }]
  },
  "plugins": ["prettier"]
}
